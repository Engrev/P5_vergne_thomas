{% extends 'front/layout.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ _path_ }}/public/css/sign.css">
{% endblock %}

{% block scripts %}
    <script src="https://www.google.com/recaptcha/api.js?render=6LdhVPQUAAAAAMWgEIy0r15HgmtjcBt1XPo2isEP"></script>
    <script src="{{ _path_ }}/public/js/contact.js"></script>
{% endblock %}

{% block body %}
    <div class="container container-sign">
        <form action="" method="POST" class="form-contact needs-validation" novalidate>
            <h1 class="h3 mb-3 text-center">Formulaire de contact</h1>

            <div class="form-group">
                <label for="name">Nom et prénom <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="name" id="name"{% if _post.name %} value="{{ _post.name }}"{% endif %} required autofocus>
                <div class="invalid-feedback">Ce champ est obligatoire.</div>
            </div>

            <div class="form-group">
                <label for="email">Adresse email <span class="text-danger">*</span></label>
                <input type="email" class="form-control" name="email" id="email"{% if _post.email %} value="{{ _post.email }}"{% endif %} required pattern="^[a-z0-9_.-]+@[a-z0-9_.-]{2,}\.[a-z]{2,4}$">
                <div class="invalid-feedback">Votre adresse email doit être de la forme : email@exemple.com.</div>
            </div>

            <div class="form-group">
                <label for="message">Message <span class="text-danger">*</span></label>
                <textarea class="form-control" name="message" id="message" rows="5" required>{% if _post.message %}{{ _post.message }}{% endif %}</textarea>
                <div class="invalid-feedback">Ce champ est obligatoire.</div>
            </div>

            <input type="hidden" name="recaptcha_response" id="recaptcha_response">

            <button type="submit" class="btn btn-lg btn-theme btn-block">Envoyer</button>
        </form>
    </div>
{% endblock %}