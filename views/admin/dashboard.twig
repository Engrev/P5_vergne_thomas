{% extends 'front/layout.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ _path_ }}/public/css/jquery-confirm.min.css">
    <link rel="stylesheet" type="text/css" href="{{ _path_ }}/public/css/dashboard.css">
{% endblock %}

{% block scripts %}
    <script src="{{ _path_ }}/public/js/jquery-confirm.min.js"></script>
    <script src="{{ _path_ }}/public/js/dashboard.js"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Tableau de bord</h1>

        <ul class="nav nav-tabs mb-3 d-none d-md-flex" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true"><i class="fas fa-list"></i> Mes articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="categories-tab" data-toggle="tab" href="#categories" role="tab" aria-controls="categories" aria-selected="false"><i class="fas fa-tags"></i> Les catégories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="followed_posts-tab" data-toggle="tab" href="#followed_posts" role="tab" aria-controls="followed_posts" aria-selected="false"><i class="fas fa-star"></i> Articles suivis</a>
            </li>
        </ul>

        <ul class="nav flex-column nav-fill mb-3 d-flex d-md-none" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true"><i class="fas fa-list"></i> Mes articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="categories-tab" data-toggle="tab" href="#categories" role="tab" aria-controls="categories" aria-selected="false"><i class="fas fa-tags"></i> Les catégories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="followed_posts-tab" data-toggle="tab" href="#followed_posts" role="tab" aria-controls="followed_posts" aria-selected="false"><i class="fas fa-star"></i> Articles suivis</a>
            </li>
        </ul>

        <section class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                <a class="btn btn-theme float-right mb-3 btn-add" href="{{ _path_ }}/articles/creer"><i class="fas fa-plus"></i> Créer un article</a>
                <table class="table table-hover table-responsive-md" id="posts">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Catégorie</th>
                            <th>Dernière mise à jour</th>
                            <th>Publié</th>
                            <th>Commentaires</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td width="5%">{{ post.id_post }}</td>
                                <td width="25%"><a href="{{ _path_  ~ '/articles/' ~ post.p_link }}" target="_blank">{{ post.title }}</a></td>
                                <td width="10%"><a href="{{ _path_ ~ '/categories/' ~ post.c_link }}/1" target="_blank">{{ post.name }}</a></td>
                                <td width="20%">{% if post.date_add != post.date_upd %}{{ post.date_upd }}{% else %}{{ post.date_add }}{% endif %}</td>
                                <td width="5%">
                                    {% if post.published == 1 %}Oui{% else %}<span data-toggle="tooltip" data-placement="bottom" title="Cet article ne sera visible que par vous">Non</span>{% endif %}
                                </td>
                                <td width="10%"></td>
                                <td width="10%">
                                    <div class="dropdown">
                                        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Actions
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item text-success" href="{{ _path_  ~ '/articles/' ~ post.p_link }}" target="_blank"><i class="fas fa-eye"></i> Voir <i class="fas fa-external-link-alt"></i></a>
                                            <a class="dropdown-item text-warning" href="{{ _path_  ~ '/articles/modifier/' ~ post.id_post }}"><i class="fas fa-edit"></i> Modifier</a>
                                            <a class="dropdown-item text-danger link-delete" href="{{ _path_  ~ '/articles/supprimer/' ~ post.id_post }}"><i class="fas fa-times"></i> Supprimer</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="categories" role="tabpanel" aria-labelledby="categories-tab">
                <a class="btn btn-theme float-right mb-3 btn-add" href="{{ _path_ }}/categories/creer"><i class="fas fa-plus"></i> Créer une catégorie</a>
                <table class="table table-hover table-responsive-md" id="categories">
                    <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category_d in categories %}
                        <tr>
                            <td width="5%">{{ category_d.id_category }}</td>
                            <td width="85%"><a href="{{ _path_  ~ '/categories/' ~ category_d.link }}" target="_blank">{{ category_d.name }}</a></td>
                            <td width="10%">
                                <div class="dropdown">
                                    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item text-success" href="{{ _path_  ~ '/categories/' ~ category_d.link }}" target="_blank"><i class="fas fa-eye"></i> Voir <i class="fas fa-external-link-alt"></i></a>
                                        {% if category_d.id_category != 1 %}
                                            <a class="dropdown-item text-warning" href="{{ _path_  ~ '/categories/modifier/' ~ category_d.id_category }}"><i class="fas fa-pen"></i> Modifier</a>
                                            <a class="dropdown-item text-danger link-delete" href="{{ _path_  ~ '/categories/supprimer/' ~ category_d.id_category }}"><i class="fas fa-times"></i> Supprimer</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="followed_posts" role="tabpanel" aria-labelledby="followed_posts-tab">Articles suivis</div>
        </section>
    </div>
{% endblock %}